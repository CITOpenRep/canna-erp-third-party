<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="crm_visit_view_tree" model="ir.ui.view">
			<field name="name">CrmVisitViewTree</field>
			<field name="model">crm.visit</field>
			<field name="arch" type="xml">
				<tree string="Visits">
					<field name="name"/>
					<field name="date"/>
					<field name="partner_id"/>
					<field name="reason"/>
					<field name="user_id"/>
					<field name="state"/>
				</tree>
			</field>
		</record>

		<record id="crm_visit_view_form" model="ir.ui.view">
			<field name="name">CrmVisitViewForm</field>
			<field name="model">crm.visit</field>
			<field name="arch" type="xml">
				<form string="Appointment" version="7.0">
					<header>
						<span>
							<button name="action_confirm" states="draft" type="object" string="Confirm Visit" class="oe_highlight"/>
							<button name="action_edit" states="planned" type="object" string="Edit Visit" class="oe_highlight"/>
							<button name="action_process" states="planned" type="object" string="Visiting/Visited" class="oe_highlight"/>
							<button name="action_done" states="visited" type="object" string="Finish Report" confirm="Are you sure you want to finish this report ?" class="oe_highlight"/>
							<button name="action_correct" states="done" type="object" string="Correct" class="oe_highlight"/>
							<field name="state" widget="statusbar" statusbar_visible="draft, planned, visited, canceled, done"/>
						</span>
					</header>
					<sheet>
						<div class="oe_inline">
							<label for="name" string="Number"/>
						</div>
						<h1>
							<field name="name"/>
						</h1>
						<group>
							<group>
								<field name="date" />
								<field name="partner_id"/>
								<field name="user_id"/>
							</group>
							<group>
								<field name="duration"/>
							</group>
							<group colspan="4">
								<field name="reason"/>
							</group>
						</group>
						<notebook colspan="4">
							<page string="General">
								<separator
									string="Details for Visit Reason" colspan="4"/>
								<field name="reason_details" colspan="4" nolabel="1"/>
							</page>
							<page string="Report">
								<group>
									<field name="feeling" colspan="4"/>
								</group>
								<group>
									<separator string="Report" colspan="4" />
									<field name="report" nolabel="1" colspan="4"/>
								</group>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_ids" widget="mail_thread"/>
						<field name="message_follower_ids" widget="mail_followers"/>
					</div>
				</form>
			</field>
		</record>

		<record id="crm_visit_view_search" model="ir.ui.view">
			<field name="name">CrmVisitViewSearch</field>
			<field name="model">crm.visit</field>
			<field name="arch" type="xml">
				<search string="Search Visit">
					<filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
					<filter name="to_process" string="To Process" domain="[('state','=','visited')]"/>
					<filter name="planned" string="Planned" domain="[('state','=','planned')]"/>
					<filter name="cancelled" string="Cancelled" domain="[('state','=','canceled')]"/>
					<filter name="processed" string="Done" domain="[('state','=','done')]"/>
					<separator/>
					<field name="name" string="Number" filter_domain="('name','ilike',self)"/>
					<filter domain="[('user_id','=',uid)]" help="My Visits" icon="terp-personal"/>
					<field name="partner_id"/>
					<field name="user_id" string="Employee"/>
					<group expand="0" string="Group By...">
						<filter string="Partner" icon="terp-partner" domain="[]" context="{'group_by':'partner_id'}"/>
						<filter string="Employee" icon="terp-personal" domain="[]" context="{'group_by':'user_id'}"/>
					</group>
				</search>
			</field>
		</record>

		<record id="crm_visit_action" model="ir.actions.act_window">
			<field name="name">Visits</field>
			<field name="res_model">crm.visit</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="crm_visit_view_tree"/>
		</record>

		<menuitem
		    action="crm_visit_action"
			id="crm_visit_menu"
			parent="crm_visit_menu_base"
			sequence="1"/>


	</data>
</openerp>
