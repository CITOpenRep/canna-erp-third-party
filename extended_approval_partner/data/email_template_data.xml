<openerp>

  <data noupdate="1">

    <record id="email_template_partner_to_apprv" model="email.template">
      <field name="name">Partners to Approve</field>
      <field name="email_from">${(object.create_uid.email or '')|safe}</field>
      <field name="subject">Partner to Approve (${object.name or 'n/a' |safe})</field>
      <field name="partner_to">${",".join(map(str, object.next_approver.mapped('users.partner_id').ids))}</field>
      <field name="model_id" ref="base.model_res_partner"/>
      <field name="auto_delete" eval="True"/>
      <field name="lang">${object.lang}</field>
      <field name="body_html">
        <![CDATA[
        <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">

          <p>Hello,</p>


          <p>A new Partner (${object.name}) has been created in the system and is waiting for your approval.
          </p>

          <p>Kind regards,</p>

          <p>${object.company_id.name|safe}</p>
        </div>
        ]]></field>
    </record>

  </data>
</openerp>
