<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="sale_order_group_view_form" model="ir.ui.view">
      <field name="name">sale.order.group.form</field>
      <field name="model">sale.order.group</field>
      <field name="arch" type="xml">
        <form string="Sales Order Group" create="false" delete="false">
          <header>
            <button name="button_confirm" states="draft" class="oe_highlight"
                    string="Confirm Orders" type="object"/>
            <button name="button_cancel" states="confirm,draft"
                    string="Cancel Orders" type="object"/>
            <field name="state" widget="statusbar"/>
          </header>
          <sheet>
            <h1>
              <field name="name" class="oe_inline" readonly="1"/>
            </h1>
            <group>
              <field name="partner_id"/>
            </group>
            <group>
              <group col="1">
                <label for="sale_order_ids"/>
                <field name="sale_order_ids" nolabel="1" mode="tree" options="{'no_open': True}">
                  <tree string="Orders">
                    <field name="name" string="Order Number"/>
                    <field name="date_order"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="amount_total" sum="Total Tax Included"/>
                    <field name="state"/>
                  </tree>
                </field>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</openerp>
