<odoo>

    <data noupdate="1">
        <record id="base_action_rule_apprv_notify_mpo" model="base.automation">
            <field name="name">Send email to approvers for Marketing
                Purchase Orders
            </field>
            <field name="model_id" ref="purchase.model_purchase_order" />
            <field name="sequence">1</field>
            <field name="trigger">on_create_or_write</field>
            <field name="filter_domain">[['state', '=', 'extended_approval'],
                ['next_approver', '!=', False], ['canna_marketing', '=',
                True]]
            </field>
            <field name="state">email</field>
            <field name="active" eval="True" />
            <field name="template_id" ref="email_template_mpo_to_apprv" />
        </record>

        <record id="base_action_rule_apprv_notify_po" model="base.automation">
            <field name="name">Send email to approvers for Purchase
                Orders
            </field>
            <field name="model_id" ref="purchase.model_purchase_order" />
            <field name="sequence">1</field>
            <field name="trigger">on_create_or_write</field>
            <field name="filter_domain">[['state', '=', 'extended_approval'],
                ['next_approver', '!=', False], ['canna_marketing', '=',
                False]]
            </field>
            <field name="state">email</field>
            <field name="active" eval="True" />
            <field name="template_id" ref="email_template_po_to_apprv" />
        </record>
    </data>

</odoo>
