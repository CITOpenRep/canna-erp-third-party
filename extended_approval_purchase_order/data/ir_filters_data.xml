<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data noupdate="1">

    <record id="ir_filters_mpo_to_apprv" model="ir.filters">
      <field name="name">Marketing PO to Approve</field>
      <field name="model_id">purchase.order</field>
      <field name="user_id" eval="False"/>
      <!-- I wish we could use a constant for 'confirmed' -->
      <field name="domain">[['state', '=', 'confirmed'], ['next_approver', '!=', False], ['canna_marketing', '=', True]]</field>
    </record>

    <record id="ir_filters_po_to_apprv" model="ir.filters">
      <field name="name">PO to Approve</field>
      <field name="model_id">purchase.order</field>
      <field name="user_id" eval="False"/>
      <field name="domain">[['state', '=', 'confirmed'], ['next_approver', '!=', False], ['canna_marketing', '=', False]]</field>
    </record>

  </data>
</openerp>
