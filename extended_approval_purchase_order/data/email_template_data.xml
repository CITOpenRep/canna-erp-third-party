<openerp>

  <data noupdate="1">

    <record id="email_template_mpo_to_apprv" model="email.template">
      <field name="name">Marketing Purchase Orders to Approve</field>
      <field name="email_from">${(object.validator.email or '')|safe}</field>
      <field name="subject">Marketing Purchase Request (Ref ${object.name or 'n/a' |safe})</field>
      <field name="partner_to">${",".join(map(str, object.next_approver.mapped('users.partner_id').ids))}</field>
      <field name="model_id" ref="purchase.model_purchase_order"/>
      <field name="auto_delete" eval="True"/>
      <field name="report_template" ref="purchase.report_purchase_quotation"/>
      <field name="report_name">PO_${(object.name or '').replace('/','_')}</field>
      <field name="lang">${object.partner_id.lang}</field>
      <field name="body_html">
        <![CDATA[
        <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">

          <p>Hello,</p>


          <p>Marketing purchase order ${object.name} is waiting for your approval.
          </p>

          <p>Kind regards,</p>

          <p>${object.company_id.name|safe}</p>
        </div>
        ]]></field>
    </record>

    <record id="email_template_po_to_apprv" model="email.template">
      <field name="name">Purchase Orders to Approve</field>
      <field name="email_from">${(object.validator.email or '')|safe}</field>
      <field name="subject">Purchase Request (Ref ${object.name or 'n/a' |safe})</field>
      <field name="partner_to">${",".join(map(str, object.next_approver.mapped('users.partner_id').ids))}</field>
      <field name="model_id" ref="purchase.model_purchase_order"/>
      <field name="auto_delete" eval="True"/>
      <field name="report_template" ref="purchase.report_purchase_quotation"/>
      <field name="report_name">PO_${(object.name or '').replace('/','_')}</field>
      <field name="lang">${object.partner_id.lang}</field>
      <field name="body_html">
        <![CDATA[
        <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">

          <p>Hello,</p>


          <p>Purchase order ${object.name} is waiting for your approval.
          </p>

          <p>Kind regards,</p>

          <p>${object.company_id.name|safe}</p>
        </div>
        ]]></field>
    </record>

  </data>
</openerp>
