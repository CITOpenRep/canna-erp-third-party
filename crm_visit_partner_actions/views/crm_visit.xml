<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="crm_visit_view_form" model="ir.ui.view">
            <field name="name">CrmVisitViewForm</field>
            <field name="model">crm.visit</field>
            <field name="inherit_id" ref="crm_visit.crm_visit_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//page[@name='general']" position="after">
                    <page string="Actions">
                        <separator string="Partner Actions" colspan="4" />
                        <field name="partner_actions" nolabel="1" colspan="4">
                            <tree string="Partner Actions" editable="bottom">
                                <field name="name"/>
                                <field name="create_date"/>
                                <field name="user_id" options="{'no_create_edit': True, 'no_create': True}"/>
                                <field name="followup_user_id" options="{'no_create_edit': True, 'no_create': True}"/>
                                <field name="action_group_id" options="{'no_create_edit': True, 'no_create': True}"/>
                                <field name="description"/>
                                <field name="comments"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
